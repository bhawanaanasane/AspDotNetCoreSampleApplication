@model IEnumerable<PracticeApplication.Models.CoreTable.UserTable>

@{
    ViewData["Title"] = "Index";
}

<div class="card-deck">
    <div class="card">
        <div class="card-header">User Data</div>
        <div class="card-body">
            <a href="/User/CreateEditUSer?Id=0"> Create New User</a>
            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Id)</td>
                            <td>@Html.DisplayNameFor(model => model.FirstName)</td>
                            <td>@Html.DisplayNameFor(model => model.LastName)</td>
                            <td> Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>
                                        <a href="/User/CreateEditUSer?Id=@item.Id">Edit User</a>
                                        |
                                        <a href="/User/Delete?Id=@item.Id"> Delete User</a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }

                    </tbody>
                </table>
                <div class="col-md-4">

                </div>
                <div class="col-md-4 text-center">
                    <div class="row">

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

